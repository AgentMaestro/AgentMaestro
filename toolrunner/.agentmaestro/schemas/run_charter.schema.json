{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "additionalProperties": true,
  "required": [
    "schema_version",
    "run_id",
    "slug",
    "created_at",
    "repo_dir",
    "srs",
    "models",
    "allowed_tools",
    "quality_gates",
    "branch_strategy",
    "stop_conditions",
    "policies"
  ],
  "properties": {
    "schema_version": { "type": "string" },
    "run_id": { "type": "string" },
    "slug": { "type": "string" },
    "created_at": { "type": "string" },
    "created_by": { "type": ["string", "null"] },
    "repo_dir": { "type": "string" },
    "srs": {
      "type": "object",
      "required": ["path", "sha256"],
      "properties": {
        "path": { "type": "string" },
        "sha256": { "type": "string", "pattern": "^[0-9a-fA-F]{64}$" }
      }
    },
    "models": {
      "type": "object",
      "minProperties": 1,
      "additionalProperties": {
        "type": "object",
        "required": ["name"],
        "properties": {
          "name": { "type": "string" }
        }
      }
    },
    "allowed_tools": {
      "type": "object",
      "required": ["tier1", "tier2", "git"],
      "properties": {
        "tier1": { "type": "array", "items": { "type": "string" } },
        "tier2": { "type": "array", "items": { "type": "string" } },
        "git": { "type": "array", "items": { "type": "string" } }
      }
    },
    "quality_gates": {
      "type": "object",
      "required": ["default", "on_merge_candidate"],
      "properties": {
        "default": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "object",
            "required": ["name", "tool"],
            "properties": {
              "name": { "type": "string" },
              "tool": { "type": "string" },
              "args": { "type": "object" },
              "required": { "type": "boolean" }
            }
          }
        },
        "on_merge_candidate": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "object",
            "required": ["name", "tool"],
            "properties": {
              "name": { "type": "string" },
              "tool": { "type": "string" },
              "args": { "type": "object" },
              "required": { "type": "boolean" }
            }
          }
        }
      }
    },
    "branch_strategy": {
      "type": "object",
      "required": ["type", "name_template"],
      "properties": {
        "type": { "type": "string" },
        "name_template": { "type": "string" },
        "base_branch": { "type": "string" }
      }
    },
    "stop_conditions": {
      "type": "object",
      "required": ["max_cycles", "max_failures", "max_minutes"],
      "properties": {
        "max_cycles": { "type": "integer", "minimum": 1 },
        "max_failures": { "type": "integer", "minimum": 0 },
        "max_minutes": { "type": "integer", "minimum": 1 }
      }
    },
    "policies": {
      "type": "object",
      "required": [
        "require_approval_for",
        "prohibit_outside_workspace",
        "prefer_revert_over_reset",
        "secrets_handling"
      ],
      "properties": {
        "require_approval_for": {
          "type": "array",
          "items": { "type": "string" }
        },
        "prohibit_outside_workspace": { "type": "boolean" },
        "prefer_revert_over_reset": { "type": "boolean" },
        "secrets_handling": {
          "type": "string",
          "enum": ["never_print", "redact", "allow"]
        }
      }
    }
  }
}
