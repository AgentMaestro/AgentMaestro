{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Plan",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "schema_version",
    "plan_id",
    "run_id",
    "created_at",
    "goal",
    "assumptions",
    "complete",
    "milestones"
  ],
  "properties": {
    "schema_version": {
      "type": "string",
      "const": "1.0"
    },
    "plan_id": {
      "type": "string",
      "minLength": 1
    },
    "run_id": {
      "type": "string",
      "minLength": 1
    },
    "created_at": {
      "type": "string"
    },
    "goal": {
      "type": "string"
    },
    "assumptions": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "complete": {
      "type": "boolean"
    },
    "milestones": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["milestone_id", "title", "description", "steps"],
        "additionalProperties": false,
        "properties": {
          "milestone_id": {
            "type": "string"
          },
          "title": {
            "type": "string"
          },
          "description": {
            "type": "string"
          },
          "steps": {
            "type": "array",
            "minItems": 1,
            "items": {
              "type": "object",
              "required": ["step_id", "intent", "tool_calls"],
              "additionalProperties": false,
              "properties": {
                "step_id": {
                  "type": "string"
                },
                "intent": {
                  "type": "string"
                },
                "tool_calls": {
                  "type": "array",
                  "minItems": 1,
                  "items": {
                    "type": "object",
                    "required": ["call_id", "tool"],
                    "additionalProperties": false,
                    "properties": {
                      "call_id": {
                        "type": "string"
                      },
                      "tool": {
                        "type": "string"
                      },
                      "args": {
                        "type": "object",
                        "additionalProperties": true
                      }
                    }
                  }
                },
                "acceptance_checks": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "required": ["name", "tool", "args"],
                    "additionalProperties": false,
                    "properties": {
                      "name": {
                        "type": "string"
                      },
                      "tool": {
                        "type": "string"
                      },
                      "args": {
                        "type": "object",
                        "additionalProperties": true
                      },
                      "required": {
                        "type": "boolean"
                      }
                    }
                  }
                },
                "requires_approval": {
                  "type": "boolean"
                },
                "risk_tags": {
                  "type": "array",
                  "items": {
                    "type": "string"
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}
